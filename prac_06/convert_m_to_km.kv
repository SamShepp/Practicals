BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '32'
            font_size: 46
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: "up"
                on_press: app.handle_increment(1)
            Button:
                text: "down"
                on_press: app.handle_increment(-1)

    Label:
        id: output_label
        font_size: 46
        text: "51.498"
        color: (1, 1, 0, 1)